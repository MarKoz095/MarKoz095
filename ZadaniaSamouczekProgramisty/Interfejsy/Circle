public class Circle implements  Figure{

    private final double r; // promien

    public Circle(double r) {
        this.r = r;
    }

    public double getPerimeter(){
        return 2 * Math.PI * r;
    }

    public double getArea(){
        return Math.PI * r * r;
    }
    public String getType(){
        return "Ko≈Ço";
    }
}

